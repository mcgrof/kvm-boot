function allow_user_defaults()
{
	if [ -z $KVM_NETDEV ]; then
		KVM_NETDEV=wlp3s0
	fi

	if [ -z $KVM_TAP_DEV ]; then
		KVM_TAP_DEV=tap0
	fi

	# Network information, these are sane values, you can keep them
	# unless they intefere with your network, ie, if you already make use
	# of this subnet. If you don't use this subnet it should be fine.
	if [ -z $KVM_NETWORK ]; then
		KVM_NETWORK=192.168.53.0
	fi

	if [ -z $KVM_NETMASK ]; then
		KVM_NETMASK=255.255.255.0
	fi

	if [ -z $KVM_GATEWAY ]; then
		KVM_GATEWAY=192.168.53.1
	fi

	if [ -z $KVM_DHCPRANGE ]; then
		KVM_DHCPRANGE=192.168.53.2,192.168.53.254
	fi

	if [ -z $KVM_DNSMASQ_RUN_DIR ]; then
		KVM_DNSMASQ_RUN_DIR=/var/lib/dnsmasq/
	fi

	if [ -z $KVM_DNSMASQ_PID ]; then
		KVM_DNSMASQ_PID=$KVM_DNSMASQ_RUN_DIR/qemu-dnsmasq-$KVM_TAP_DEV.pid
	fi

	if [ -z $KVM_DNSMASQ_LEASE ]; then
		KVM_DNSMASQ_LEASE=$KVM_DNSMASQ_RUN_DIR/qemu-dnsmasq-$KVM_TAP_DEV.leases
	fi

	# Optionally parameters to enable PXE support
	if [ -z $KVM_TFTPROOT ]; then
		KVM_TFTPROOT=
	fi

	if [ -z $KVM_BOOTP ]; then
		KVM_BOOTP=
	fi
}

do_ifconfig() {
    ifconfig "$@"
}

do_iptables_restore() {
    iptables-restore "$@"
}

check_dnsmasq()
{
    if ! ps -ef| grep -v grep | grep dnsmasq >/dev/null 2> /dev/null; then
	return 0
    else
	return 1
    fi
}

do_dnsmasq() {
    if check_dnsmasq; then
	echo going to start DNS!
	dnsmasq "$@"
    fi
}

enable_ip_forward() {
	sysctl -w net.ipv4.ip_forward=1
}

flush_tables()
{
	for i in INPUT FORWARD OUTPUT; do
		iptables -F $i
	done
	iptables -t nat -D POSTROUTING 1
}

add_filter_rules()
{
	flush_tables
	iptables -t nat -A POSTROUTING -s $KVM_NETWORK/24 -o $KVM_NETDEV -j MASQUERADE
}

start_dnsmasq() {
    do_dnsmasq \
	--strict-order \
	--log-queries \
	--except-interface=lo \
	--interface=$1 \
	--listen-address=$KVM_GATEWAY \
	--bind-interfaces \
	--dhcp-range=$KVM_DHCPRANGE \
	--conf-file="" \
	--dhcp-no-override \
	${KVM_TFTPROOT:+"--enable-tftp"} \
	${KVM_TFTPROOT:+"--tftp-root=$KVM_TFTPROOT"} \
	${KVM_BOOTP:+"--dhcp-boot=$KVM_BOOTP"}
	#--dhcp-leasefile=$KVM_DNSMASQ_LEASE \
	#--pid-file=$KVM_DNSMASQ_PID \
}

check_vdeswitch()
{
	if ps -ef | grep -v grep | grep vde_switch >/dev/null 2> /dev/null; then
		return 1
	else
		return 0
	fi
}

do_vdeswitch() {
	if check_vdeswitch; then
		vde_switch "$@"
	fi
}

start_vdeswitch() {
    do_vdeswitch \
	-hub \
	-tap $KVM_TAP_DEV \
	-mod 660 \
	-group kvm \
	-s /var/run/qemu-vde.ctl \
	--pidfile /var/run/qemu-vde.pid \
	-daemon
}

setup_nat() {
	enable_ip_forward
	add_filter_rules "$1"
}

echo Setting up switch on $KVM_TAP_DEV

allow_user_defaults
start_vdeswitch
do_ifconfig $KVM_TAP_DEV "$KVM_GATEWAY" netmask "$KVM_NETMASK" up

setup_nat $KVM_TAP_DEV
start_dnsmasq $KVM_TAP_DEV
